<div class="usb-edit-post">
  <%= render :partial => "actions", :locals => { :model => model } %>

  <%= form_for model, :url => @router.post_path(:id => model.slug) do |f| %>
    <%= render :partial => "form", :locals => { f: f } %>
  <% end %>

  <h3><%= t('posts.images') %></h3>
  <%= new_image_cell.create :subject => model %>
  <%= images_cell.pick %>
</div>
